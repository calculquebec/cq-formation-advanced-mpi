#!/bin/bash
#PBS -l nodes=3:ppn=12
#PBS -l walltime=00:10:00
#PBS -V
#PBS -N mv4

cd $PBS_O_WORKDIR

export IPATH_NO_CPUAFFINITY=1
export OMP_NUM_THREADS=6

NPERNODE=$(($PBS_NUM_PPN/$OMP_NUM_THREADS))
NMPI=$((PBS_NP/$OMP_NUM_THREADS))
mpiexec -n $NMPI -npernode $NPERNODE -cpus-per-proc $OMP_NUM_THREADS -report-bindings ./mv4 < mv4.in

